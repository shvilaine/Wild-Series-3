{% extends 'base.html.twig' %}

{% block title %}Acteurs{% endblock %}

{% block body %}
    <h1>Acteurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>PictureFile</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.name }}</td>
                <td>{{ actor.pictureFile }}</td>
                <td>
                    <a href="{{ path('app_actor_show', {'id': actor.id}) }}">show</a>
                    <a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun acteur trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actor_new') }}">Nouveau</a>
{% endblock %}
